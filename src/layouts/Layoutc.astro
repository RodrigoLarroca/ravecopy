---
import Footerc from "../components/Footerc.astro";
import Headerc from "../components/Headerc.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/Rave.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="fixed top-0 z-[-2] size-full bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		
		
		<main class="z-1  max-w-full px-4 m-auto">
			<Headerc />
		<slot />
		</main>
		<Footerc />
	</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap');
	html {
		font-family: font-fjallaone, sans-serif;
		background-size: 224px;
		color-scheme: dark light;
	}
</style>
